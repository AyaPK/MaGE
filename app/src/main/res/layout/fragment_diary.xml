<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainTabbedActivities.diary.DiaryFragment">

    <include
        android:id="@+id/themainbar"
        layout="@layout/actionbar_nobuttons" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mainEntryList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteY="80dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floating_button_add_diary_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="-380dp"
        android:layout_marginBottom="82dp"
        android:src="@drawable/ic_baseline_edit_24"
        app:backgroundTint="@color/Orange_Yellow_Crayola"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/mainEntryList"
        app:tint="@color/raisin_black"
        android:contentDescription="@string/floating_button_to_create_new_entry" />

</androidx.constraintlayout.widget.ConstraintLayout>